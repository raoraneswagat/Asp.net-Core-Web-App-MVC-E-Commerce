@page
@model MyApp.Namespace.DeleteModel

<form method="post">
<input asp-for="category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        
        <div class="row p-1">
            <label asp-for="category.Name" class="p-0"></label>
            <input asp-for="category.Name" type="text" class="form-control" disabled />
            
        </div>
        <div class="row p-1">
            <label asp-for="category.DisplayOrder" class="p-0"></label>
            <input asp-for="category.DisplayOrder" type="text" class="form-control" disabled />
            
        </div>
        <div class="row p-1">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-secondary border form-control">Back To
                    List</a>
            </div>
        </div>


    </div>


</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}